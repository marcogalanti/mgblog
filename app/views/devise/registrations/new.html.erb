<% page_title("login")%>
<div id="loginbox" class="container col-sm-4 col-sm-offset-4">
  <div class="login" class="container col-sm-6 col-sm-offset-3" align="center">
    <br />
    <%= image_tag "marcogalanti.jpg",:size => "70x70", :alt => "marcogalanti" , :id => "logo", :class => "img-rounded"%>
    <h3 align="center">MG Blog</h3>
    <h3 align="center">Registrazione nuovo utente</h3>

    <%= bootstrap_form_for(resource, :as => resource_name, :url => user_registration_path()) do |f| %>
      <%= devise_error_messages! %>
      <br />
      <div id="devise"><%= f.email_field :email, :autofocus => true, id: "devise_field", label: "Email" %></div>
      <div id="devise"><%= f.text_field :first_name, :autofocus => true, id: "devise_field", label: "Nome" %></div>
      <div id="devise"><%= f.text_field :middle_name, :autofocus => true, id: "devise_field", label: "Secondo nome" %></div>
      <div id="devise"><%= f.text_field :last_name, :autofocus => true, id: "devise_field", label: "Cognome" %></div>
      <div id="devise"><%#= f.select :country_id, Country.all.map {|c| [ c.name.humanize, c.id]}%></div>
      <div id="devise"><%#= f.select :role, ['manager','presenter'],:prompt=>"Select your role" %></div>
      <div id="devise"><%= f.password_field :password, id: "devise_field" %></div>
      <div id="devise"><%= f.password_field :password_confirmation, id: "devise_field", label: "Conferma password" %></div>
      <div id="devise"><%= f.submit :submit , value: "Registrazione", class: "btn btn-success btn-block", id: "devise_button", label: "Accedi" %></div>
      <br/>
    <% end %>

    <%= render "devise/shared/links" %>
  </div> <!-- close login box -->
</div> <!-- close loginbox box -->
