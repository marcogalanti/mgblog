<% page_title("login")%>
<div id="loginbox" class="col-sm-4 col-sm-offset-4">
  <div class="login" class="col-sm-6 col-sm-offset-3" align="center">
  <br />
  <%= image_tag "marcogalanti.jpg",:size => "70x70", :alt => "marcogalanti" , :id => "logo", :class => "img-rounded"%>
  <h3 align="center">Password dimenticata?</h3>

<%= bootstrap_form_for(resource, :as => resource_name, :url => user_password_path(), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <br />
  <div id="devise"><%= f.email_field :email, :autofocus => true, id: "devise_field" %></div>

  <div id="devise"><%= f.submit "Inviami le istruzioni", class: "btn btn-success btn-block", id: "devise_button",label: "Inviami le istruzioni" %></div>
  <br/>
<% end %>

<%= render "devise/shared/links" %>
  </div> <!-- close login box -->
</div> <!-- close loginbox box -->
