<%- if controller_name != 'sessions' %>
  <%= link_to "Accedi", new_user_session_path(), :id => "deviselinks"  %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrazione", new_user_registration_path(), :id => "deviselinks"  %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Password dimenticata?", new_user_password_path(), :id => "deviselinks"  %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto le istruzioni per la conferma?", new_user_confirmation_path(), :id => "deviselinks"  %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Non hai ricevuto la conferma dele istruzioni per lo sblocco?", new_user_unlock_path(), :id => "deviselinks"   %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Accedi con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :id => "deviselinks"  %><br />
  <% end -%>
<% end -%>
